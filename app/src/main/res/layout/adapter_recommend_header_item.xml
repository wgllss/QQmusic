<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_header"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="-1dp"
        android:flipInterval="30"
        android:focusable="false"
        android:persistentDrawingCache="animation" />

    <LinearLayout
        android:id="@+id/ad_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-25dp"
        android:gravity="center"
        android:orientation="horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="电台"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <View
            android:id="@+id/view_center"
            android:layout_width="10dp"
            android:layout_height="3dp"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/img_left"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_toLeftOf="@+id/view_center" />

        <ImageView
            android:id="@+id/img_play_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/img_left"
            android:layout_toLeftOf="@+id/view_center"
            android:padding="10dp"
            android:src="@drawable/icon_open" />

        <ImageView
            android:id="@+id/img_right"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_toRightOf="@+id/view_center" />

        <ImageView
            android:id="@+id/img_play_right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/img_left"
            android:layout_alignRight="@+id/img_right"
            android:padding="10dp"
            android:src="@drawable/icon_open" />

        <TextView
            android:id="@+id/txt_left"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/img_left"
            android:layout_toLeftOf="@+id/view_center"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txt_right"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/img_right"
            android:layout_toRightOf="@+id/view_center"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textSize="14dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="热点歌单"
        android:textColor="@color/black"
        android:textSize="16dp" />
</LinearLayout>
